<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:gravity="center_vertical" 
        android:background="@drawable/common_top_layer_without_projection_bg" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="@dimen/common_topbar_high" 
        android:minHeight="@dimen/common_topbar_high"
      >
        <ImageView 
            android:id="@+id/left_back" 
            android:clickable="true" 
            android:layout_width="@dimen/common_left_backbtn_width" 
            android:layout_height="fill_parent" 
            android:src="@drawable/common_icon_back_btn_selector" 
            android:layout_centerVertical="true" />
        <ImageButton 
            android:textSize="@dimen/title_bar_btn_tx_size" 
            android:gravity="center" 
            android:id="@+id/btn_clear" 
            android:background="@drawable/common_btn_selector" 
            android:paddingLeft="10.0dip" 
            android:paddingRight="10.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="@dimen/title_bar_btn_height"
            android:layout_marginTop="@dimen/title_bar_btn_margin" 
            android:layout_marginRight="@dimen/title_bar_btn_margin" 
            android:src="@drawable/caldis_delete" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />

        <TextView 
            android:textSize="@dimen/title_bar_title_tx_size" 
            android:textColor="@android:color/black" 
            android:gravity="center" 
            android:id="@+id/total_dis_tv" 
            android:background="@drawable/calc_dist_result_bg" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10.0dip" 
            android:layout_marginTop="@dimen/title_bar_btn_margin" 
            android:layout_marginRight="10.0dip" 
            android:text="0.0公里" 
            android:layout_toLeftOf="@+id/btn_clear" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
     <com.dt.dbmap.MyMapView android:id="@+id/mymapView"
	    android:layout_width="fill_parent" android:layout_height="fill_parent" 
	    android:clickable="true"     
	/>
</LinearLayout>