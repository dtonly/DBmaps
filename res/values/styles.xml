<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CommonSearchboxHomeText">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="BottomBarTextStyle">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="LocationProgressStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">20.0dip</item>
        <item name="android:maxHeight">20.0dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/loc_progress_bar</item>
        <item name="android:indeterminateDuration">1200</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">20.0dip</item>
        <item name="android:minHeight">20.0dip</item>
    </style>

    <style name="CommonTopBarRightText">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommonTopBarMiddleText">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>

</resources>